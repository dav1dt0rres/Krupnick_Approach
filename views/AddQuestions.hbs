<h4>Please Enter the details of the Question</h4>


<form action="/AddQuestions"  method="post">

    <button  id="Edit_Button" name="Edit_Button" type="submit">Edit a Question</button>


    <label for="Passage">
        Passage

        <input id="Passage" name="Passage" value="{{Passage}}"  />


    </label>

    <label for="QuestionText">
        Question Text
        <input class="upper" id="QuestionText" name="QuestionText"  />
        <label class="error">{{errors.firstName}}</label>
    </label>
    <label for="Question_Number">
        Question Number
        <input id="Question_Number" name="Question_Number" value="{{Question_Number}}"  />

    </label>
    <label for="AnswerA">
        Answer A
        <input id="AnswerA" name="AnswerA" value="{{AnswerA}}" />

    </label>
    <label for="AnswerB">
        Answer B
        <input id="AnswerB" name="AnswerB" value="{{AnswerB}}" />

    </label>
    <label for="AnswerC">
        Answer C
        <input id="AnswerC" name="AnswerC" value="{{AnswerC}}" />
      </label>
    <label for="AnswerD">
        Answer D
        <input id="AnswerD" name="AnswerD" value="{{AnswerD}}"  />
    </label>
    <label for="AnswerE">
        Answer E
        <input id="AnswerE" name="AnswerE"  value="{{AnswerE}}" />

    </label>
    <label for="Tag">
        Tag
        <input id="Tag" name="Tag" value="{{Tag}}" />

    </label>
    <label  for="Test">
        Test
        <input id="Test"  name="Test" value="{{Test}}"  />

    </label>
    <label  for="Test_Type">
        Test_Type
        <input id="Test_type"  name="Test_Type" value="{{Test_Type}}"  />

    </label>
    <label class="right" for="RightAnswer">
        Right Answer
        <select id="RightAnswer"  name="RightAnswer">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="E">E</option>

        </select>

    </label>

    <button type="submit">Save Question</button>


</form>


<button onclick="goBack()">Go Back</button>

<script type="text/javascript">
    function move() {
        window.location.href = '/AddQuestions/DeleteDatabase'
    }

</script>
<button onclick="move()">Delete Database </button>

<script>
    function goBack() {
        window.history.back();
    }
</script>
